<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backportrait"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/warlock_button"
            android:layout_width="80dp"
            android:layout_height="59dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/favpng_destiny_2_bungie_warlock_emblem"
            android:backgroundTint="@color/white"
            android:text=""
            app:backgroundTint="@null" />


        <Button
            android:id="@+id/hunter_button"
            android:layout_width="78dp"
            android:layout_height="73dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/d8f59d88130e75a03cc8445de6bcd816_preview_rev_1"
            android:backgroundTint="@color/white"
            android:text=""
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/titan_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="70dp"
            android:layout_height="76dp"
            android:background="@drawable/favpng_destiny_2_xbox_360_symbol"
            android:backgroundTint="@color/white"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:backgroundTint="@null"
            app:iconPadding="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewChooseInvite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:fontFamily="@font/futura_normal"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeDesc" />

    <TextView
        android:id="@+id/textViewWelcomeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/futura_normal"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainInfo" />

    <TextView
        android:id="@+id/textViewMainInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/futura_normal"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>